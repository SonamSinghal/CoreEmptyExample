@using Microsoft.Extensions.Configuration
@inject IConfiguration _config

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="width:100%;">
        <div class="container">
            <a class="navbar-brand" style="width:20%;" asp-controller="Home" asp-action="">
                <img style="height: auto; width: 50%;" src="~/images/download.png" alt="Logo" asp-append-version="true" />
                @_config["AppName"]
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarNav">
                <ul class="navbar-nav" style="justify-content:flex-end;">
                   <partial name="_LoginInfo" />
                </ul>

                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item active ">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">Get All Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="InsertBook">Add New Book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>