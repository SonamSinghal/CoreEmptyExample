@model IEnumerable<CoreEmptyExample.Model.BookModel>


@{
    ViewData["Title"] = "GetAllBooks";
}

<h1 style="text-align:center;">Book List</h1>

<div class="container">
    @foreach(var item in Model)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th>Pages</th>
                            <th>Quantity</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Author</td>
                        <td>@item.Description</td>
                        <td>@item.Pages</td>
                        <td>@item.Quantity</td>
                        <td><button class="btn btn-primary">Update</button></td>
                        <td><button class="btn btn-primary">Delete</button></td>
                    </tr>
                </table>
            }
</div>

